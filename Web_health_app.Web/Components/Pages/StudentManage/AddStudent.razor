@page "/studentmanage/add"
@using Microsoft.AspNetCore.Authorization
@using Web_health_app.Web.Components.Layout

@layout EmptyLayout

<link href="/css/StudentManage/add-student.css" rel="stylesheet" />

<div class="add-student-container">
    <div class="add-student-card">
        <!-- Header -->
        <div class="card-header">
            <div class="header-content">
                <div class="header-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <div class="header-text">
                    <h2>Thêm Sinh Viên Mới</h2>
                    <p>Tạo hồ sơ sinh viên trong hệ thống quản lý</p>
                </div>
            </div>
            <button type="button" class="btn-close" onclick="window.history.back()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <!-- Form Body -->
        <div class="card-body">
            <form class="add-student-form">
                <!-- Basic Student Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-id-card"></i>
                        Thông Tin Cơ Bản
                    </h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-hashtag"></i>
                                Mã Sinh Viên <span class="required">*</span>
                            </label>
                            <input type="text" class="form-control" id="studentId" name="studentId"
                                placeholder="Nhập mã sinh viên (VD: SV001)" maxlength="20" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-user"></i>
                                Họ và Tên <span class="required">*</span>
                            </label>
                            <input type="text" class="form-control" id="fullName" name="fullName"
                                placeholder="Nhập họ và tên đầy đủ" maxlength="100" required />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar-alt"></i>
                                Ngày Sinh <span class="required">*</span>
                            </label>
                            <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-venus-mars"></i>
                                Giới Tính <span class="required">*</span>
                            </label>
                            <select class="form-select" id="gender" name="gender" required>
                                <option value="">-- Chọn giới tính --</option>
                                <option value="male">Nam</option>
                                <option value="female">Nữ</option>
                                <option value="other">Khác</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-id-badge"></i>
                                CCCD/CMND <span class="required">*</span>
                            </label>
                            <input type="text" class="form-control" id="citizenId" name="citizenId"
                                placeholder="Nhập số CCCD/CMND" maxlength="12" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-phone"></i>
                                Số Điện Thoại <span class="required">*</span>
                            </label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                                placeholder="Nhập số điện thoại" maxlength="15" required />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-envelope"></i>
                                Email <span class="required">*</span>
                            </label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Nhập địa chỉ email" maxlength="100" required />
                        </div>
                    </div>
                </div>

                <!-- Academic Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-graduation-cap"></i>
                        Thông Tin Học Vụ
                    </h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-building"></i>
                                Khoa/Viện <span class="required">*</span>
                            </label>
                            <select class="form-select" id="faculty" name="faculty" required>
                                <option value="">-- Chọn khoa/viện --</option>
                                <option value="cntt">Công Nghệ Thông Tin</option>
                                <option value="kinh-te">Kinh Tế</option>
                                <option value="y-duoc">Y Dược</option>
                                <option value="luat">Luật</option>
                                <option value="ngoai-ngu">Ngoại Ngữ</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-book"></i>
                                Chuyên Ngành <span class="required">*</span>
                            </label>
                            <select class="form-select" id="major" name="major" required>
                                <option value="">-- Chọn chuyên ngành --</option>
                                <option value="ktpm">Kỹ Thuật Phần Mềm</option>
                                <option value="cnpm">Công Nghệ Phần Mềm</option>
                                <option value="httt">Hệ Thống Thông Tin</option>
                                <option value="mmt">Mạng Máy Tính</option>
                                <option value="atbm">An Toàn Bảo Mật</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-users"></i>
                                Lớp Học <span class="required">*</span>
                            </label>
                            <select class="form-select" id="className" name="className" required>
                                <option value="">-- Chọn lớp học --</option>
                                <option value="KTPM01">KTPM01</option>
                                <option value="KTPM02">KTPM02</option>
                                <option value="CNPM01">CNPM01</option>
                                <option value="CNPM02">CNPM02</option>
                                <option value="HTTT01">HTTT01</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar-week"></i>
                                Khóa Học <span class="required">*</span>
                            </label>
                            <select class="form-select" id="course" name="course" required>
                                <option value="">-- Chọn khóa học --</option>
                                <option value="2020">Khóa 2020</option>
                                <option value="2021">Khóa 2021</option>
                                <option value="2022">Khóa 2022</option>
                                <option value="2023">Khóa 2023</option>
                                <option value="2024">Khóa 2024</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-clock"></i>
                                Hình Thức Đào Tạo <span class="required">*</span>
                            </label>
                            <select class="form-select" id="studyMode" name="studyMode" required>
                                <option value="">-- Chọn hình thức --</option>
                                <option value="fulltime">Chính Quy</option>
                                <option value="parttime">Liên Thông</option>
                                <option value="distance">Đào Tạo Từ Xa</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-info-circle"></i>
                                Trạng Thái <span class="required">*</span>
                            </label>
                            <select class="form-select" id="status" name="status" required>
                                <option value="">-- Chọn trạng thái --</option>
                                <option value="active">Đang Học</option>
                                <option value="suspended">Tạm Nghỉ</option>
                                <option value="graduated">Tốt Nghiệp</option>
                                <option value="dropped">Thôi Học</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Contact Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-address-book"></i>
                        Thông Tin Liên Hệ
                    </h3>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-home"></i>
                                Địa Chỉ Thường Trú
                            </label>
                            <textarea class="form-control" id="permanentAddress" name="permanentAddress" rows="3"
                                placeholder="Nhập địa chỉ thường trú đầy đủ..."></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-map-marker-alt"></i>
                                Địa Chỉ Tạm Trú
                            </label>
                            <textarea class="form-control" id="currentAddress" name="currentAddress" rows="3"
                                placeholder="Nhập địa chỉ tạm trú (nếu khác địa chỉ thường trú)..."></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-user-friends"></i>
                                Người Liên Hệ Khẩn Cấp
                            </label>
                            <input type="text" class="form-control" id="emergencyContact" name="emergencyContact"
                                placeholder="Nhập tên người liên hệ khẩn cấp" maxlength="100" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-phone-alt"></i>
                                SĐT Liên Hệ Khẩn Cấp
                            </label>
                            <input type="tel" class="form-control" id="emergencyPhone" name="emergencyPhone"
                                placeholder="Nhập số điện thoại khẩn cấp" maxlength="15" />
                        </div>
                    </div>
                </div>

                <!-- Health Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-heartbeat"></i>
                        Thông Tin Sức Khỏe
                    </h3>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-weight"></i>
                                Cân Nặng (kg)
                            </label>
                            <input type="number" class="form-control" id="weight" name="weight"
                                placeholder="Nhập cân nặng" min="30" max="200" step="0.1" />
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-ruler-vertical"></i>
                                Chiều Cao (cm)
                            </label>
                            <input type="number" class="form-control" id="height" name="height"
                                placeholder="Nhập chiều cao" min="100" max="250" step="0.1" />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-tint"></i>
                                Nhóm Máu
                            </label>
                            <select class="form-select" id="bloodType" name="bloodType">
                                <option value="">-- Chọn nhóm máu --</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="AB">AB</option>
                                <option value="O">O</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-allergies"></i>
                                Dị Ứng
                            </label>
                            <input type="text" class="form-control" id="allergies" name="allergies"
                                placeholder="Nhập thông tin dị ứng (nếu có)" maxlength="200" />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-notes-medical"></i>
                                Ghi Chú Sức Khỏe
                            </label>
                            <textarea class="form-control" id="healthNotes" name="healthNotes" rows="3"
                                placeholder="Nhập ghi chú về tình trạng sức khỏe đặc biệt..."></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Footer Actions -->
        <div class="card-footer">
            <div class="action-buttons">
                <button type="button" class="btn btn-reset">
                    <i class="fas fa-redo"></i>
                    Làm Mới
                </button>
                <button type="button" class="btn btn-cancel" onclick="window.history.back()">
                    <i class="fas fa-times"></i>
                    Hủy Bỏ
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Lưu Sinh Viên
                </button>
            </div>
        </div>
    </div>
</div>

