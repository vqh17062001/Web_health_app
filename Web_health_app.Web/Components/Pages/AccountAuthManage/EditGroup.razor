@page "/accountAuthManage/editgroup"
@using Web_health_app.Web.Components.Layout

@layout EmptyLayout

<link href="/css/AccountAuthManage/edit-group.css" rel="stylesheet" />

<div class="edit-group-container">
    <div class="edit-group-card">
        <!-- Header -->
        <div class="card-header">
            <div class="header-content">
                <div class="header-icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <div class="header-text">
                    <h2>Chỉnh Sửa Nhóm Người Dùng</h2>
                    <p>Cập nhật thông tin và cài đặt nhóm</p>
                </div>
            </div>
            <button type="button" class="btn-close" aria-label="Đóng">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <!-- Form Content -->
        <div class="card-body">
            <form class="edit-group-form">
                <!-- Current Group Info Display -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Thông tin hiện tại
                    </h4>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-clock"></i>
                                Ngày tạo
                            </label>
                            <div class="info-display">
                                <i class="fas fa-calendar-plus"></i>
                                12/07/2024 - 09:15 AM
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-sync-alt"></i>
                                Lần cập nhật cuối
                            </label>
                            <div class="info-display">
                                <i class="fas fa-calendar-edit"></i>
                                19/07/2024 - 03:20 PM
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-toggle-on"></i>
                                Trạng thái hiện tại
                            </label>
                            <div class="status-badge active">
                                <i class="fas fa-check-circle"></i>
                                Đang hoạt động
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-users"></i>
                                Số thành viên
                            </label>
                            <div class="info-display">
                                <i class="fas fa-user-friends"></i>
                                15 người dùng
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Group Information Section -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="fas fa-edit"></i>
                        Thông Tin Nhóm
                    </h4>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-hashtag"></i>
                                Mã Nhóm
                            </label>
                            <input type="text" class="form-control" id="groupId" name="groupId" value="GRP001"
                                readonly />
                            <small class="form-text">Mã nhóm không thể thay đổi</small>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-tag"></i>
                                Tên Nhóm <span class="required">*</span>
                            </label>
                            <input type="text" class="form-control" id="groupName" name="groupName"
                                value="IT Department" placeholder="Nhập tên nhóm (tối đa 50 ký tự)" maxlength="50"
                                required />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-clock"></i>
                                Thời Gian Hoạt Động
                            </label>
                            <input type="text" class="form-control" id="timeActive" name="timeActive"
                                value="08:00-18:00" placeholder="VD: 08:00-18:00, 24/7, Theo ca..." maxlength="20" />
                            <small class="form-text">Mô tả thời gian nhóm có thể hoạt động</small>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-toggle-on"></i>
                                Trạng Thái
                            </label>
                            <div class="status-toggle">
                                <input type="checkbox" id="isActive" name="isActive" class="toggle-input" checked />
                                <label for="isActive" class="toggle-label">
                                    <span class="toggle-slider"></span>
                                    <span class="toggle-text">Hoạt động</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Group Description Section -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="fas fa-align-left"></i>
                        Mô Tả Nhóm
                    </h4>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-edit"></i>
                                Mô Tả Chi Tiết
                            </label>
                            <textarea class="form-control" id="description" name="description" rows="4"
                                placeholder="Mô tả mục đích, chức năng và phạm vi hoạt động của nhóm...">Nhóm IT chịu trách nhiệm quản lý và bảo trì hệ thống công nghệ thông tin của công ty</textarea>
                        </div>
                    </div>
                </div>

                <!-- Group Settings Section -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="fas fa-cogs"></i>
                        Cài Đặt Nhóm
                    </h4>

                    <div class="settings-grid">
                        <div class="setting-item">
                            <div class="setting-icon">
                                <i class="fas fa-users-cog"></i>
                            </div>
                            <div class="setting-content">
                                <h4>Quản Lý Thành Viên</h4>
                                <p>Cho phép thêm/xóa thành viên tự động</p>
                                <div class="setting-toggle">
                                    <input type="checkbox" id="autoManage" class="mini-toggle" checked />
                                    <label for="autoManage" class="mini-toggle-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="setting-item">
                            <div class="setting-icon">
                                <i class="fas fa-bell"></i>
                            </div>
                            <div class="setting-content">
                                <h4>Thông Báo</h4>
                                <p>Gửi thông báo khi có thay đổi nhóm</p>
                                <div class="setting-toggle">
                                    <input type="checkbox" id="notifications" class="mini-toggle" checked />
                                    <label for="notifications" class="mini-toggle-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="setting-item">
                            <div class="setting-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div class="setting-content">
                                <h4>Lưu Lịch Sử</h4>
                                <p>Theo dõi hoạt động của nhóm</p>
                                <div class="setting-toggle">
                                    <input type="checkbox" id="trackHistory" class="mini-toggle" checked />
                                    <label for="trackHistory" class="mini-toggle-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Group Members Section -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="fas fa-users"></i>
                        Thành Viên Nhóm
                    </h4>

                    <div class="members-container">
                        <div class="members-header">
                            <div class="member-search">
                                <i class="fas fa-search"></i>
                                <input type="text" placeholder="Tìm kiếm thành viên..." class="search-input" />
                            </div>
                            <button type="button" class="btn btn-add-member">
                                <i class="fas fa-user-plus"></i>
                                Thêm thành viên
                            </button>
                        </div>

                        <div class="members-list">
                            <div class="member-item">
                                <div class="member-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="member-info">
                                    <h5>Nguyễn Văn A</h5>
                                    <small>IT Manager - nguyenvana@company.com</small>
                                </div>
                                <div class="member-actions">
                                    <button type="button" class="btn-action edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button" class="btn-action remove">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="member-item">
                                <div class="member-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="member-info">
                                    <h5>Trần Thị B</h5>
                                    <small>Developer - tranthib@company.com</small>
                                </div>
                                <div class="member-actions">
                                    <button type="button" class="btn-action edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button" class="btn-action remove">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Notes -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="fas fa-sticky-note"></i>
                        Ghi Chú
                    </h4>

                    <div class="form-row">
                        <div class="form-group full-width">
                            <label class="form-label">
                                <i class="fas fa-comment"></i>
                                Ghi chú thêm
                            </label>
                            <textarea class="form-control" id="notes" name="notes" rows="3"
                                placeholder="Thêm ghi chú hoặc thông tin bổ sung về nhóm...">Nhóm này được tạo để quản lý các dự án công nghệ và hỗ trợ kỹ thuật cho toàn công ty.</textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Footer Actions -->
        <div class="card-footer">
            <div class="action-buttons">
                <button type="button" class="btn btn-cancel">
                    <i class="fas fa-times"></i>
                    Hủy bỏ
                </button>
                <button type="button" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i>
                    Xóa nhóm
                </button>
                <button type="button" class="btn btn-reset">
                    <i class="fas fa-undo"></i>
                    Khôi phục
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Cập nhật nhóm
                </button>
            </div>
        </div>
    </div>
</div>

